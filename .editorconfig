# EditorConfig for SecureShare
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{js,json}]
indent_size = 2

[*.{html,css}]
indent_size = 2

[*.{png,jpg,jpeg,gif,svg,ico}]
insert_final_newline = false

[Makefile]
indent_style = tab
